#test mr2 dimensions. All sizes are in meters, sorry for the conversion
#bitches.


chassis{
	sprung-weight 2500
	center-of-gravity 0,0,0
}


#wheels are 205r40/17s on the front, 225r45/17s on the rear

front_left_wheel[
	radius	0.5969
	width	0.204978
]
front_right_wheel[
	radius	0.5969
	width	0.204978
]

rear_left_wheel[
	radius	0.635
	width	0.225044
]
rear_right_wheel[
	radius	0.635
	width	0.225044
]

#-------------------------------------------
#suspension settings
#	type
#		macpherson
#		double-wishbone

#-------------------------------------------
front_left_suspension[
	type macpherson
	
	chassis-upper-control-arm-offset -2.5,-.5,-4
	hub-upper-control-arm-offset 1
	
	chassis-lower-control-arm-offset -1,-2,-4
	hub-lower-control-arm-offset -2,-2,-4
	
	chassis-endlink-offset 1
	hub-endlink-offset -2,-2,-4
	lower-control-arm-endlink-offset -1.75,-2,-4
	
	chassis-trailing-arm-offset -1,-2,-5
	#hub-trailing-arm-offset 1
	lower-control-arm-trailing-arm-offset -1.75,-2,-4
	
	chassis-strut-offset 1
	hub-strut-offset 1
	chassis-spring-offset 1
	hub-spring-offset 1
	
	spring-rate 1
	strut-rebound-rate 1
	strut-compression-rate 1
]

front_right_suspension[
	type macpherson
	chassis-upper-control-arm-offset 2.5,-.5,-4
	hub-upper-control-arm-offset 1
	chassis-lower-control-arm-offset 1,-2,-4
	hub-lower-control-arm-offset 2,-2,-4
	chassis-endlink-offset 2,-2,-5
	hub-endlink-offset 2,-2,-4
	chassis-trailing-arm-offset 1,-2,-5
	#hub-trailing-arm-offset 1
	lower-control-arm-trailing-arm-offset 1.75,-2,-4
	chassis-strut-offset 1
	hub-strut-offset 1
	chassis-spring-offset 1
	hub-spring-offset 1
	
	spring-rate 1
	strut-rebound-rate 1
	strut-compression-rate 1
]

rear_left_suspension[
	type macpherson
	chassis-upper-control-arm-offset -2.5,-.5,4
	hub-upper-control-arm-offset 1
	chassis-lower-control-arm-offset -1,-2,4
	hub-lower-control-arm-offset -2,-2,4
	chassis-endlink-offset 1
	hub-endlink-offset 1
	chassis-trailing-arm-offset 1
	hub-trailing-arm-offset 1
	chassis-strut-offset 1
	hub-strut-offset 1
	chassis-spring-offset 1
	hub-spring-offset 1
	
	spring-rate 1
	strut-rebound-rate 1
	strut-compression-rate 1
]

rear_right_suspension[
	type macpherson
	chassis-upper-control-arm-offset 2.5,-.5,4
	hub-upper-control-arm-offset 1
	chassis-lower-control-arm-offset 1,-2,4
	hub-lower-control-arm-offset 2,-2,4
	chassis-endlink-offset 1
	hub-endlink-offset 1
	chassis-trailing-arm-offset 1
	hub-trailing-arm-offset 1
	chassis-strut-offset 1
	hub-strut-offset 1
	chassis-spring-offset 1
	hub-spring-offset 1
	
	spring-rate 1
	strut-rebound-rate 1
	strut-compression-rate 1
]

front_left_brake[
	type disk
	radius 10
	bias .25
]
front_right_brake[
	type disk
	radius 10
	bias .25
]
rear_left_brake[
	type disk
	radius 10
	bias .25
]
rear_right_brake[
	type disk
	radius 10
	bias .25
]